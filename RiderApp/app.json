{
  "expo": {
    "name": "COD Express",
    "slug": "codexpress",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.codexpress.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to make voice calls between riders and merchants.",
        "UIBackgroundModes": [
          "audio",
          "voip",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "com.codexpress.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "READ_PHONE_STATE",
        "ACCESS_NETWORK_STATE"
      ],
      "softwareKeyboardLayoutMode": "resize",
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}